<div class="main-container">
  <div class="containerbox">
    <div class="item ">
     <h2><strong><%= @cocktail.name %></strong>
     </h2>
     <br>
     <h4><strong>Ingredients:</strong></h4>
      <p><%= "#{@dose.description} #{@dose.ingredient}" %>
      </p>
        <% @cocktail.doses.each do |dose| %>
        <p>
        <%="#{dose.ingredient.name}: #{dose.description}" %>
        <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: 'Sure?'}, class: "btn btn-outline-secondary" %>
       </p>
        <% end %>
    </div>


      <div class="item ">
      <img class="img", alt="Le Wagon"
         src="https://images.unsplash.com/photo-1541807456792-67393c00912c?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1347&q=80%27" />
      </div>

      <div class="separator"></div>



      <div class="item" style="width: 800px">
        <h3><strong>Add doses to the cocktail:</strong></h3>

        <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description, placeholder: "describe your dose" %>
        <%= f.association :ingredient %>
        <%= f.submit "Add", class: "btn btn-outline-secondary" %>
        <% end %>
        <br>
        <%= link_to 'Delete cocktail', cocktail_path(@cocktail), method: :delete, class: "btn btn-outline-secondary" %>
      </div>
 </div>
</div>








<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>


<p>
  <strong>Doses:</strong>
  <%= "#{@dose.description} #{@dose.ingredient}" %>
</p>


<% @cocktail.doses.each do |dose| %>
  <p>
    <%= "#{dose.ingredient.name} #{dose.description}" %>
    <%= link_to 'Delete', cocktail_path, method: :delete, data: { confirm: 'Sure?'} %>
    <hr>
  </p>
<% end %>



<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">


    <h1>Add doses to the cocktail:</h1>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description, placeholder: "describe your dose" %>
    <%= f.association :ingredient %>
    <%= f.submit "add dose", class: 'btn btn-primary' %>
    <% end %>
    </div>
  </div>
</div>

<%= link_to 'Back to all cocktails', cocktails_path %>



